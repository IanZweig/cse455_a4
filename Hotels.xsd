<xsd:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="https://ianzweig.github.io/cse455_a4" elementFormDefault="qualified" attributeFormDefault="unqualified">
	
	<xsd:annotation>
		<xsd:documentation xml:lang="en">
			Ian Zweig Assignment 4 Schema Definition
		</xsd:documentation>
	</xsd:annotation>
	
	<xsd:element name="Hotels" type="HotelsType"/>
	<xsd:complexType name="HotelsType">
		<xsd:sequence>
			<xsd:element name="Hotel" type="HotelDetails" minOccurs="1" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="HotelDetails">
		<xsd:sequence>
			<xsd:element name="Name" type="xs:string"/>
			<xsd:element name="Phone" type="PhoneType" maxOccurs="unbounded"/>
			<xsd:element name="Address" type="AddressType"/>
		</xsd:sequence>
		<xsd:attribute name="Rating" type="xs:decimal" use="optional"/>
	</xsd:complexType>
	
	<xsd:complexType name="Address">
		<xsd:sequence>
			<xsd:element name="Number" type="xs:integer"/>
			<xsd:element name="Street" type="xs:string"/>
			<xsd:element name="City" type="xs:string"/>
			<xsd:element name="State" type="xs:string"/>
			<xsd:element name="Zip" type="xs:integer"/>
		</xsd:sequence>
		<xsd:attribute name="NearestAirport" type="xs:string" use="required"/>
	</xsd:complexType>
			
			
<!--
 Define the allowed format for the Phone number with a regular exp. 
-->
	<xsd:simpleType name="PhoneType">
		<xsd:restriction base="xsd:string">
			<xsd:pattern value="\d{3}\-\d{3} \d{4}"/>
		</xsd:restriction>
	</xsd:simpleType>
</xsd:schema>
